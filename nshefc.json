{
	"$schema": "vscode://schemas/color-theme",
	"colors": {
		"editor.background": "#1e1e1e", // Default
		"editor.foreground": "#f5f5f5",
		"editorLineNumber.foreground": "#666666", // Match comment foreground
		"editorLineNumber.activeForeground": "#f5f5f5", // Match editor foreground
		"editorCursor.foreground": "#f5f5f5", // Match editor foreground
		"editorGhostText.foreground": "#0069b1", // Match comment foreground luminance (https://www.w3.org/TR/WCAG22/relative-luminance.html)
		"editor.placeholder.foreground": "#ffffff56", // Default ghost text foreground; prevent inheriting the custom ghost text foreground
		"editorIndentGuide.activeBackground1": "#707070", // Default is invisible; adopt Dark+ setting

		// Hide bracket pair colorization
		"editorBracketHighlight.foreground1": "#00000000",
		"editorBracketHighlight.foreground2": "#00000000",
		"editorBracketHighlight.foreground3": "#00000000",
		"editorBracketHighlight.foreground4": "#00000000",
		"editorBracketHighlight.foreground5": "#00000000",
		"editorBracketHighlight.foreground6": "#00000000",
		"editorBracketHighlight.unexpectedBracket.foreground": "#f5f5f5" // Match editor foreground
	},
	"tokenColors": [
		{
			"scope": "comment",
			"settings": {
				"foreground": "#666666" // https://meyerweb.com/eric/tools/color-blend/#1E1E1E:F5F5F5:2:hex
			}
		}
	]
}
